<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<div class="account-content">
    <h2>Welcome <%= locals.accountData.account_firstname %></h2>
    
    <p>
        <a href="/account/update/<%= locals.accountData.account_id %>" title="Update your account information">Update Account Information</a>
    </p>
    
    <% if (locals.accountData.account_type === 'Employee' || locals.accountData.account_type === 'Admin') { %>
        <h3>Inventory Management</h3>
        <p>
            <a href="/inv/" title="Manage inventory">Manage Inventory</a>
        </p>
    <% } %>
</div>