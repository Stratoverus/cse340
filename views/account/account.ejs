<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<div class="account-content">
    <h2>Welcome <%= locals.accountData.account_firstname %></h2>
    
    <div class="account-actions">
        <a href="/account/update/<%= locals.accountData.account_id %>" 
           class="management-link" 
           title="Update your account information">
            <span class="link-title">Update Account Information</span>
            <span class="link-description">Modify your personal details</span>
        </a>
        
        <% if (locals.accountData.account_type === 'Employee' || locals.accountData.account_type === 'Admin') { %>
            <a href="/inv/" 
               class="management-link" 
               title="Manage inventory">
                <span class="link-title">Manage Inventory</span>
                <span class="link-description">Add, edit, or delete vehicles and classifications</span>
            </a>
        <% } %>
    </div>
</div>