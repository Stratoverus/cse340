<header id="top-header">
    <span class="siteName">
        <a href="/" class="header-link" title="Return to home page">CSE Motors</a>
    </span>
    <div id="tools">
        <% if (locals.loggedin) { %>
            <a class="header-link" title="<%= locals.accountData.account_firstname %>'s account" href="/account/">Account</a>
            <a class="header-link" title="Click to log out" href="/account/logout">Logout</a>
        <% } else { %>
            <a class="header-link" title="Click to log in" href="/account/login">My Account</a>
        <% } %>
    </div>
</header>