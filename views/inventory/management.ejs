<% if (title) { %>
    <h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<div class="management-container">
    <h2>Inventory Management</h2>
    <p>Choose a management area below:</p>
    
    <div class="management-links">
        <a href="/inv/manage-vehicles" class="management-link">
            <span class="link-title">Vehicle Management</span>
            <span class="link-description">Add, edit, or delete vehicles</span>
        </a>
        
        <% if (locals.accountData && locals.accountData.account_type === 'Admin') { %>
            <a href="/inv/manage-classifications" class="management-link">
                <span class="link-title">Classification Management</span>
                <span class="link-description">Manage vehicle classifications</span>
            </a>
        <% } %>
    </div>
    
    <div class="form-actions">
        <a href="/account/" class="back-link">‚Üê Back to Account</a>
    </div>
</div>